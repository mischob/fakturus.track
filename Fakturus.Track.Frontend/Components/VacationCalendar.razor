@using Fakturus.Track.Frontend.Models

<div class="card">
    <h3 class="text-lg font-semibold mb-4">Urlaubstag hinzufügen</h3>
    
    <div class="space-y-4">
        <!-- Native Date Picker -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
                Datum auswählen
            </label>
            <input type="date"
                   value="@_selectedDate"
                   @oninput="@(e => _selectedDate = e.Value?.ToString() ?? string.Empty)"
                   class="w-full px-4 py-3 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   style="min-height: 44px;"/>
        </div>

        <!-- Add Button -->
        <button @onclick="AddSelectedDate"
                disabled="@string.IsNullOrEmpty(_selectedDate)"
                class="w-full btn-primary @(string.IsNullOrEmpty(_selectedDate) ? "opacity-50 cursor-not-allowed" : "")">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Urlaubstag hinzufügen
        </button>
    </div>
</div>

@code {
    [Parameter] public EventCallback<DateOnly> OnDateSelected { get; set; }

    private string _selectedDate = string.Empty;

    private async Task AddSelectedDate()
    {
        if (string.IsNullOrEmpty(_selectedDate))
            return;

        if (DateOnly.TryParse(_selectedDate, out var date))
        {
            await OnDateSelected.InvokeAsync(date);
            _selectedDate = string.Empty; // Reset after adding
        }
    }
}

