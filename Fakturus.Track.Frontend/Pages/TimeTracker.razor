@page "/"
@page "/tracker"
@attribute [Authorize]
@using Blazored.Toast.Services
@using Microsoft.AspNetCore.Authorization
@using Fakturus.Track.Frontend.Components.Calendar
@implements IDisposable
@inject ILocalStorageService LocalStorageService
@inject IWorkSessionsApiClient ApiClient
@inject ISyncService SyncService
@inject IToastService ToastService

<PageTitle>Time Tracker</PageTitle>

<div class="py-6 space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">Time Tracker</h1>
        <div class="flex gap-3">
            <button @onclick="OpenCalendarImport"
                    class="btn-secondary">
                Import from Calendar
            </button>
            <button @onclick="HandleSync"
                    class="btn-primary @(_isSyncing ? "opacity-50 cursor-not-allowed" : "")"
                    disabled="@_isSyncing">
                @if (_isSyncing)
                {
                    <span>Syncing...</span>
                }
                else
                {
                    <span>Sync</span>
                }
            </button>
        </div>
    </div>

    <!-- Current Session Card -->
    @if (_currentSession != null)
    {
        <WorkSessionCard WorkSession="_currentSession"
                         OnStart="HandleStart"
                         OnStop="HandleStop"
                         OnFinish="HandleFinish"
                         OnSave="HandleSave"
                         OnDelete="HandleDelete"
                         OnCancel="HandleCancel"
                         OnNew="HandleNew"/>
    }
    else
    {
        <div class="card">
            <div class="text-center py-8">
                <p class="text-gray-600 mb-4">No active session</p>
                <button @onclick="HandleNew" class="btn-primary">
                    Start New Session
                </button>
            </div>
        </div>
    }

    <!-- History -->
    <div class="space-y-4">
        <h2 class="text-2xl font-semibold text-gray-900">History</h2>
        @{
            // History: all sessions except the current one
            // Current session is today's session (may have StopTime set but not finished)
            var historySessions = _workSessions
                .Where(s => _currentSession == null || s.Id != _currentSession.Id)
                .OrderByDescending(s => s.Date)
                .ThenByDescending(s => s.StartTime != default ? s.StartTime : DateTime.MinValue)
                .ToList();
        }
        @if (historySessions.Any())
        {
            @foreach (var session in historySessions)
            {
                <WorkSessionCard WorkSession="session"
                                 OnStart="HandleStart"
                                 OnStop="HandleStop"
                                 OnFinish="HandleFinish"
                                 OnSave="HandleSave"
                                 OnDelete="HandleDelete"
                                 OnCancel="HandleCancel"
                                 OnNew="HandleNew"
                                 IsHistory="true"/>
            }
        }
        else
        {
            <div class="card text-center py-8">
                <p class="text-gray-600">No work sessions yet</p>
            </div>
        }
    </div>
</div>

<!-- Calendar Import Modal -->
<CalendarImportModal IsVisible="_showCalendarModal"
                     OnClose="CloseCalendarImport"
                     OnImport="HandleCalendarImport"/>

@code {
    private List<WorkSessionModel> _workSessions = [];
    private WorkSessionModel? _currentSession;
    private bool _isSyncing;
    private bool _isFinishing; // Flag to prevent re-loading finished session
    private bool _showCalendarModal;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to sync completed event
        SyncService.SyncCompleted += OnSyncCompleted;

        await LoadWorkSessionsAsync();

        // Perform initial sync
        try
        {
            await SyncService.SyncAsync();
            await LoadWorkSessionsAsync();
        }
        catch (Exception ex)
        {
            // Silently fail on initialization - user can manually sync
            Console.WriteLine($"Initial sync failed: {ex.Message}");
        }

        // Start background sync if there are pending sessions
        try
        {
            await SyncService.StartPeriodicSyncAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to start background sync: {ex.Message}");
        }
    }

    private async void OnSyncCompleted(object? sender, EventArgs e)
    {
        Console.WriteLine("TimeTracker: Sync completed, reloading sessions...");
        await InvokeAsync(async () =>
        {
            await LoadWorkSessionsAsync();
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        // Unsubscribe from sync completed event
        SyncService.SyncCompleted -= OnSyncCompleted;
        
        // Stop background sync when component is disposed
        SyncService.StopPeriodicSync();
    }

    private async Task LoadWorkSessionsAsync()
    {
        _workSessions = await LocalStorageService.GetWorkSessionsAsync();
        Console.WriteLine($"LoadWorkSessionsAsync: Loaded {_workSessions.Count} sessions from local storage");

        // If we're finishing a session, don't reload it as current
        if (_isFinishing)
        {
            _isFinishing = false;
            _currentSession = null;
            StateHasChanged();
            return;
        }

        // Current session logic: Only local unfinished sessions can be current
        // A session is "current" if:
        // 1. It has IsPendingSync = true (not yet synced to backend)
        // 2. OR it's the session we're actively working on (by ID match)

        if (_currentSession != null)
        {
            // Try to find the same session by ID first
            var existingCurrent = _workSessions.FirstOrDefault(s => s.Id == _currentSession.Id);
            if (existingCurrent != null)
            {
                // Keep as current only if it's still pending (not synced yet)
                // Once synced, it should move to history
                if (existingCurrent.IsPendingSync && !existingCurrent.IsSynced)
                {
                    _currentSession = existingCurrent;
                    Console.WriteLine($"LoadWorkSessionsAsync: Kept existing current session {_currentSession.Id} (still pending)");
                }
                else
                {
                    // Session was synced, move to history
                    _currentSession = null;
                    Console.WriteLine("LoadWorkSessionsAsync: Current session was synced, moved to history");
                }
            }
            else
            {
                // Session not found (maybe deleted), clear current session
                _currentSession = null;
                Console.WriteLine("LoadWorkSessionsAsync: Current session not found, cleared");
            }
        }
        else
        {
            // No current session - don't automatically pick one from backend
            // Current session should only be set when user explicitly creates a new one
            Console.WriteLine("LoadWorkSessionsAsync: No current session");
        }

        StateHasChanged();
    }

    private async Task HandleStart(WorkSessionModel session)
    {
        session.StartTime = DateTime.UtcNow;
        session.Date = DateOnly.FromDateTime(DateTime.Now);
        session.IsPendingSync = true;
        session.IsSynced = false; // Mark as not synced
        await LocalStorageService.SaveWorkSessionAsync(session);
        await LoadWorkSessionsAsync();

        // Start background sync for pending session
        await SyncService.StartPeriodicSyncAsync();

        ToastService.ShowSuccess("Start time recorded");
    }

    private async Task HandleStop(WorkSessionModel session)
    {
        // Set stop time but don't close the session
        session.StopTime = DateTime.UtcNow;
        session.IsPendingSync = true;
        session.IsSynced = false; // Mark as not synced
        await LocalStorageService.SaveWorkSessionAsync(session);
        await LoadWorkSessionsAsync();

        // Start background sync for pending session
        await SyncService.StartPeriodicSyncAsync();

        ToastService.ShowSuccess("Stop time recorded");
    }

    private async Task HandleFinish(WorkSessionModel session)
    {
        // Finish closes the session and moves it to history
        // Ensure StopTime is set
        session.StopTime ??= DateTime.UtcNow;

        session.IsPendingSync = true;
        session.IsSynced = false; // Mark as not synced
        await LocalStorageService.SaveWorkSessionAsync(session);

        // Set flag to prevent re-loading the finished session
        _isFinishing = true;

        // Reload to refresh the list (finished session will appear in history)
        await LoadWorkSessionsAsync();

        // Start background sync for pending session
        await SyncService.StartPeriodicSyncAsync();

        ToastService.ShowSuccess("Session finished");
    }

    private async Task HandleNew()
    {
        var newSession = new WorkSessionModel
        {
            Id = Guid.NewGuid(),
            Date = DateOnly.FromDateTime(DateTime.Now),
            StartTime = default, // Don't set start time initially - let user set it
            StopTime = null,
            IsPendingSync = true
        };

        await LocalStorageService.SaveWorkSessionAsync(newSession);
        _currentSession = newSession; // Set as current session immediately
        await LoadWorkSessionsAsync();

        // Start background sync for new pending session
        await SyncService.StartPeriodicSyncAsync();

        ToastService.ShowSuccess("New session created");
    }

    private async Task HandleCancel(WorkSessionModel session)
    {
        // Just exit edit mode / clear current session without deleting
        // For history items: WorkSessionCard handles exiting edit mode internally
        // For current session: Clear it from current view
        if (_currentSession?.Id == session.Id)
        {
            _currentSession = null;
        }

        // Reload to refresh the view
        await LoadWorkSessionsAsync();
        ToastService.ShowInfo("Cancelled");
    }

    private async Task HandleSave(WorkSessionModel session)
    {
        session.IsPendingSync = true;
        session.IsSynced = false; // Mark as not synced so it will be included in next sync
        await LocalStorageService.SaveWorkSessionAsync(session);

        // Reload to refresh the list
        // LoadWorkSessionsAsync will preserve the current session by ID
        await LoadWorkSessionsAsync();

        // Start background sync for pending session
        await SyncService.StartPeriodicSyncAsync();

        ToastService.ShowSuccess("Session updated");
    }

    private async Task HandleDelete(WorkSessionModel session)
    {
        try
        {
            // Always try to delete from backend if session exists there (synced or has SyncedAt)
            if (session.IsSynced || session.SyncedAt.HasValue)
            {
                try
                {
                    await ApiClient.DeleteWorkSessionAsync(session.Id);
                    ToastService.ShowSuccess("Session deleted from server");
                }
                catch (Exception ex)
                {
                    // If backend delete fails, still delete locally but show warning
                    ToastService.ShowWarning($"Session deleted locally, but server deletion failed: {ex.Message}");
                }
            }
            else
            {
                // Session was never synced, just delete locally
                ToastService.ShowSuccess("Session deleted");
            }

            // Delete from local storage
            await LocalStorageService.DeleteWorkSessionAsync(session.Id);
            await LoadWorkSessionsAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to delete session: {ex.Message}");
        }
    }

    private async Task HandleSync()
    {
        if (_isSyncing) return;

        _isSyncing = true;
        StateHasChanged(); // Update UI to show syncing state

        try
        {
            await SyncService.SyncAsync();
            // After sync, reload sessions
            // LoadWorkSessionsAsync will preserve the current session by ID if it exists
            await LoadWorkSessionsAsync();

            // Restart background sync if there are still pending sessions
            await SyncService.StartPeriodicSyncAsync();

            StateHasChanged(); // Force UI refresh after sync
            ToastService.ShowSuccess("Sync completed");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Sync failed: {ex.Message}");
        }
        finally
        {
            _isSyncing = false;
            StateHasChanged(); // Update UI to hide syncing state
        }
    }

    private void OpenCalendarImport()
    {
        _showCalendarModal = true;
    }

    private void CloseCalendarImport()
    {
        _showCalendarModal = false;
    }

    private async Task HandleCalendarImport(List<CalendarEventModel> selectedEvents)
    {
        try
        {
            var importedCount = 0;
            foreach (var evt in selectedEvents)
            {
                // Convert calendar event to work session
                var workSession = new WorkSessionModel
                {
                    Id = Guid.NewGuid(),
                    Date = DateOnly.FromDateTime(evt.StartTime.ToLocalTime()),
                    StartTime = evt.StartTime,
                    StopTime = evt.EndTime,
                    IsPendingSync = true,
                    IsSynced = false
                };

                await LocalStorageService.SaveWorkSessionAsync(workSession);
                importedCount++;
            }

            // Reload work sessions
            await LoadWorkSessionsAsync();

            // Trigger sync
            await SyncService.StartPeriodicSyncAsync();

            ToastService.ShowSuccess($"Imported {importedCount} event(s) from calendar");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to import calendar events: {ex.Message}");
        }
    }

}