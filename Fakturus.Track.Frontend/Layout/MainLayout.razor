@inherits LayoutComponentBase
@inject IVersionCheckService VersionCheckService
@inject NavigationManager Navigation
@inject ICalendarModalService CalendarModalService
@inject ILocalStorageService LocalStorageService
@inject ISyncService SyncService
@inject IToastService ToastService
@using Blazored.Toast.Services
@using Fakturus.Track.Frontend.Components.Calendar
@using Fakturus.Track.Frontend.Components.Navigation
@implements IDisposable

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50">
    <AuthorizeView>
        <Authorized>
            <!-- Fixed Header -->
            <header class="fixed top-0 left-0 right-0 bg-white/90 backdrop-blur-md border-b border-gray-200 z-50">
                <div class="max-w-4xl mx-auto px-4 h-16 flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <img src="/images/logo.svg" alt="Fakturus" class="h-8 max-h-full w-auto object-contain block"/>
                    </div>

                    <div class="flex items-center gap-3">
                        <button @onclick="BeginLogout" class="text-sm text-gray-600 hover:text-gray-900 focus:outline-none">Logout</button>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <main class="pb-20 pt-16">
                <div class="max-w-4xl mx-auto px-4">
                    @Body
                </div>
            </main>

            <!-- Bottom Navigation -->
            <TrackBottomNavigation/>
        </Authorized>
        <NotAuthorized>
            <!-- Enhanced Authentication Layout -->
            <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-green-50 p-4">
                <div class="w-full max-w-md">
                    <div class="bg-white rounded-2xl shadow-lg p-8">
                        <div class="text-center mb-8">
                            <img src="/images/logo.svg" alt="Fakturus" class="h-16 mx-auto mb-4"/>
                            <h1 class="text-2xl font-bold text-gray-900">Welcome to Time Tracker</h1>
                            <p class="text-gray-600 mt-2">Track your daily work time</p>
                        </div>
                        @Body
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

<!-- Calendar Import Modal (rendered OUTSIDE main layout container for proper z-index and scroll) -->
<CalendarImportModal IsVisible="_showCalendarModal"
                     OnClose="CloseCalendarImport"
                     OnImport="HandleCalendarImport"/>

@code {
    private bool _showCalendarModal;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to calendar modal events
        CalendarModalService.VisibilityChanged += OnModalVisibilityChanged;

        // Check version on app start
        await VersionCheckService.CheckVersionAsync();

        // Start periodic check
        await VersionCheckService.StartPeriodicCheckAsync();
    }

    private void OnModalVisibilityChanged(object? sender, bool isVisible)
    {
        _showCalendarModal = isVisible;
        StateHasChanged();
    }

    private void CloseCalendarImport()
    {
        _showCalendarModal = false;
        CalendarModalService.Hide();
    }

    private async Task HandleCalendarImport(List<CalendarEventModel> selectedEvents)
    {
        try
        {
            // Load existing sessions to check for duplicates
            var existingSessions = await LocalStorageService.GetWorkSessionsAsync();

            var importedCount = 0;
            var skippedCount = 0;

            foreach (var evt in selectedEvents)
            {
                var eventDate = DateOnly.FromDateTime(evt.StartTime.ToLocalTime());
                var eventStartTime = evt.StartTime;
                var eventEndTime = evt.EndTime;

                // Check if a session with the same date, start time, and end time already exists
                var isDuplicate = existingSessions.Any(s =>
                    s.Date == eventDate &&
                    s.StartTime == eventStartTime &&
                    s.StopTime == eventEndTime);

                if (isDuplicate)
                {
                    skippedCount++;
                    Console.WriteLine($"Skipping duplicate calendar event: {evt.Summary} on {eventDate} at {eventStartTime.ToLocalTime():HH:mm}");
                    continue;
                }

                // Convert calendar event to work session
                var workSession = new WorkSessionModel
                {
                    Id = Guid.NewGuid(),
                    Date = eventDate,
                    StartTime = eventStartTime,
                    StopTime = eventEndTime,
                    IsPendingSync = true,
                    IsSynced = false
                };

                await LocalStorageService.SaveWorkSessionAsync(workSession);
                importedCount++;
            }

            // Trigger sync
            await SyncService.StartPeriodicSyncAsync();

            // Notify TimeTracker to reload sessions
            CalendarModalService.NotifyImport(selectedEvents);

            // Show appropriate message based on results
            if (importedCount > 0 && skippedCount > 0)
            {
                ToastService.ShowSuccess($"Imported {importedCount} event(s), skipped {skippedCount} duplicate(s)");
            }
            else if (importedCount > 0)
            {
                ToastService.ShowSuccess($"Imported {importedCount} event(s) from calendar");
            }
            else if (skippedCount > 0)
            {
                ToastService.ShowInfo($"All {skippedCount} event(s) were duplicates and skipped");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to import calendar events: {ex.Message}");
        }
    }

    private void BeginLogout()
    {
        Navigation.NavigateTo("authentication/logout", true);
    }

    public void Dispose()
    {
        CalendarModalService.VisibilityChanged -= OnModalVisibilityChanged;
    }

}